<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= typeof title !== 'undefined' ? `${title} | ` : '' %>Exercise Tracker API</title>
    <link rel="icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/fontawesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <%- body %>
    <script>
      function events() {
        document.addEventListener('click', event => {
          const element = event.target;
          element.matches('.copy-button.api-users') ? copyText('https://autumnchris-exercise-tracker-api.onrender.com/api/users') : null;
          element.matches('.copy-button.api-user-log') ? copyText('https://autumnchris-exercise-tracker-api.onrender.com/api/user/log/<your-user-id>') : null;
          element.matches('.copy-button.api-user-log-limit') ? copyText('https://autumnchris-exercise-tracker-api.onrender.com/api/user/log/<your-user-id>?limit=<number-of-logs>') : null;
          element.matches('.copy-button.api-user-log-dates') ? copyText('https://autumnchris-exercise-tracker-api.onrender.com/api/user/log/<your-user-id>?from=<earliest-date>&to=<latest-date>') : null;
          element.matches('.copy-button.api-user-log-limit-and-dates') ? copyText('https://autumnchris-exercise-tracker-api.onrender.com/api/user/log/<your-user-id>?from=<earliest-date>&to=<latest-date>&limit=<number-of-logs>') : null;
        });
      }

      function copyText(text) {
        navigator.clipboard.writeText(text);
      }

      events();
    </script>
  </body>
</html>